<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/experta.jell.viewz"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <experta.jell.viewz.DurationTextview
                android:id="@+id/durationtextview1"
                app:template="%s was spent during"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <experta.jell.viewz.DurationTextview
                android:id="@+id/durationtextview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <experta.jell.viewz.DurationTextview
                android:id="@+id/durationtextview3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <experta.jell.viewz.DurationTextview
                android:id="@+id/durationtextview4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <experta.jell.viewz.DurationTextview
                android:id="@+id/durationtextview5"
                android:layout_width="wrap_content"
                app:template="%s was spent during"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <experta.jell.viewz.LineView
            android:layout_marginTop="30dp"
            android:id="@+id/lineview"
            android:padding="10dp"
            android:background="@color/brown"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <experta.jell.viewz.ChartView
            android:layout_marginTop="30dp"
            android:id="@+id/chartview"
            android:padding="10dp"
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/walking"
                android:layout_width="wrap_content"
                android:text="@string/walking"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/running"
                android:layout_width="wrap_content"
                android:text="@string/running"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/cycling"
                android:layout_width="wrap_content"
                android:text="@string/cycling"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <experta.jell.viewz.ChartView
            android:layout_marginTop="10dp"
            android:id="@+id/chartview_annimated"
            android:padding="10dp"
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

    </LinearLayout>
</ScrollView>
